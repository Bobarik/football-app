<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcome_fragment">

    <fragment
        android:id="@+id/matches_fragment"
        android:name="com.gmail.vlaskorobogatov.footballapi.ui.fragments.MatchesFragment"
        android:label="Main"
        tools:layout="@layout/matches_fragment_layout" />

    <fragment
        android:id="@+id/welcome_fragment"
        android:name="com.gmail.vlaskorobogatov.footballapi.ui.fragments.WelcomeFragment"
        android:label="Main"
        tools:layout="@layout/welcome_fragment_layout">

        <action
            android:id="@+id/welcome_to_matches_action"
            app:destination="@id/matches_fragment" />

        <action
            android:id="@+id/welcome_to_web_view_action"
            app:destination="@id/web_view_fragment" />
    </fragment>

    <fragment
        android:id="@+id/web_view_fragment"
        android:name="com.gmail.vlaskorobogatov.footballapi.ui.fragments.WebViewFragment"
        android:label="Main"
        tools:layout="@layout/web_view_layout" />
</navigation>