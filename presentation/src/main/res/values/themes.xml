<resources>
    <!-- Base application theme. -->
    <style name="Theme.FootballApp.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="default_transition_enter">@transition/slide_right</item>
        <item name="default_transition_exit">@transition/slide_left</item>
        <item name="materialButtonStyle">@style/Widget.FootballApp.Button.Filled</item>
        <item name="android:textAppearance">@style/TextAppearance.FootballApp.Base</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.FootballApp.Base.Medium</item>
        <item name="android:textViewStyle">@style/Widget.FootballApp.TextView</item>
    </style>

    <style name="Theme.FootballApp" parent="Theme.FootballApp.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="placeholderColor">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>